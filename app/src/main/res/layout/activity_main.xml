<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_rotate_right_black_24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="-30dp"
                tools:ignore="VectorDrawableCompat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_arrow_upward_black_24dp"
                    android:layout_marginBottom="-30dp"
                    tools:ignore="VectorDrawableCompat" />

                <io.github.controlwear.virtual.joystick.android.JoystickView
                    android:id="@+id/joystick1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    app:JV_backgroundColor="@color/Joystick"
                    app:JV_borderColor="@color/JoystickAccent"
                    app:JV_borderWidth="6dp"
                    app:JV_buttonColor="@color/JoystickAccent"
                    app:JV_buttonSizeRatio="25%"
                    app:JV_fixedCenter="false" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_arrow_downward_black_24dp"
                    android:layout_marginTop="-30dp"
                    tools:ignore="VectorDrawableCompat" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_rotate_left_black_24dp"
                android:layout_marginLeft="-30dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginLeft="-20dp"
                android:layout_marginRight="-20dp">

                <Button
                    android:id="@+id/connect_button"
                    android:layout_width="100dp"
                    android:layout_height="55dp"
                    android:background="@drawable/button_background"
                    android:text="connect"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:id="@+id/joystick1text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0x 0y"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/joystick2text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0x 0y"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp"
                android:layout_marginRight="-30dp"
                tools:ignore="VectorDrawableCompat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp"
                    android:layout_marginBottom="-30dp"
                    tools:ignore="VectorDrawableCompat" />

                <io.github.controlwear.virtual.joystick.android.JoystickView
                    android:id="@+id/joystick2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    app:JV_backgroundColor="@color/Joystick"
                    app:JV_borderColor="@color/JoystickAccent"
                    app:JV_borderWidth="6dp"
                    app:JV_buttonColor="@color/JoystickAccent"
                    app:JV_buttonSizeRatio="25%"
                    app:JV_fixedCenter="false" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:layout_marginTop="-30dp"
                    tools:ignore="VectorDrawableCompat" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_marginLeft="-30dp"/>
        </LinearLayout>
</android.support.constraint.ConstraintLayout>