<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MotionControlActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Motion control"
            android:textAlignment="center"
            android:textSize="50dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/button_background" />

        <Button
            android:id="@+id/MC_connect_button"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:text="Start"/>
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:visibility="invisible" />


        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_rotate_right_24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="-30dp"
            tools:ignore="VectorDrawableCompat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_upward_24dp"
                android:layout_marginBottom="-30dp"
                tools:ignore="VectorDrawableCompat" />

            <io.github.controlwear.virtual.joystick.android.JoystickView
                android:id="@+id/joystickMC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:JV_backgroundColor="@color/Joystick"
                app:JV_borderColor="@color/JoystickAccent"
                app:JV_borderWidth="6dp"
                app:JV_buttonColor="@color/JoystickAccent"
                app:JV_buttonSizeRatio="25%"
                app:JV_fixedCenter="false" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_downward_24dp"
                android:layout_marginTop="-30dp"
                tools:ignore="VectorDrawableCompat" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_rotate_left_24dp"
            android:layout_marginLeft="-30dp"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>