<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Help"
        android:textSize="50dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/button_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:foreground="@drawable/ic_settings_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:text="Settings"
                android:textAlignment="center"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:foreground="@drawable/ic_all_inclusive_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Motion control"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_marginBottom="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:foreground="@drawable/ic_wifi_tethering_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start TCP connection"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_marginBottom="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:foreground="@drawable/ic_portable_wifi_off_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stop TCP connection"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_marginBottom="25dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/button_background" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Settings"
            android:textSize="50dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/button_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Server IP:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/serverIPeditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:inputType="none"
            android:textAlignment="center"
            android:layout_marginBottom="25dp" />

        <Button
            android:id="@+id/applyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:background="@drawable/button_background"/>

    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>